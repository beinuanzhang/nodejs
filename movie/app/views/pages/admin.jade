extends ../layout

block content
	.container
		.row
			form.form-horizontal(method="post", action="/admin/movie", enctype="multipart/form-data")
				.form-group
					lable.col-sm-3.control-label 豆瓣同步
					.col-sm-3
						input#douban.form-control(type="text")
				if movie._id
					input(type="hidden", name="movieId", value=movie._id)
				.form-group
					lable.col-sm-3.control-label(for="inputCategory") 电影分类
					.col-sm-9
						input#inputCategory.form-control(type="text",name="movie[categoryName]",value=movie.categoryName)
				.form-group
					lable.col-sm-3.control-label 选择分类
					each cat in categories
						lable.radio-inline
							if movie._id
								input(type="radio", name="movieCategory", value=cat._id, checked=cat._id.toString()==movie.category.toString())
							else
								input(type="radio", name="movieCategory", value=cat._id)
							| #{cat.name}
				.form-group
					lable.col-sm-3.control-label(for="inputTitle") 电影名字
					.col-sm-9
						input#inputTitle.form-control(type="text",name="movieTitle",value=movie.title)
				.form-group
					lable.col-sm-3.control-label(for="inputDoctor") 电影导演
					.col-sm-9
						input#inputDoctor.form-control(type="text",name="movieDoctor",value=movie.doctor)
				.form-group
					lable.col-sm-3.control-label(for="inputCountry") 国家
					.col-sm-9
						input#inputCountry.form-control(type="text",name="movieCountry",value=movie.country)
				.form-group
					lable.col-sm-3.control-label(for="inputLanguage") 语种
					.col-sm-9
						input#inputLanguage.form-control(type="text",name="movieLanguage",value=movie.language)
				.form-group
					lable.col-sm-3.control-label(for="inputPoster") 海报地址
					.col-sm-9
						input#inputPoster.form-control(type="text",name="moviePoster",value=movie.poster)
				.form-group
					lable.col-sm-3.control-label(for="uploadPoster") 海报上传
					.col-sm-9
						input#uploadPoster.form-control(type="file",name="uploadPoster")
				.form-group
					lable.col-sm-3.control-label(for="inputFlash") 片源地址
					.col-sm-9
						input#inputFlash.form-control(type="text",name="movieFlash",value=movie.flash)
				.form-group
					lable.col-sm-3.control-label(for="inputYear") 上映年代
					.col-sm-9
						input#inputYear.form-control(type="text",name="movieYear",value=movie.year)
				.form-group
					lable.col-sm-3.control-label(for="inputSummary") 电影简介
					.col-sm-9
						input#inputSummary.form-control(type="text",name="movieSummary",value=movie.summary)
				.form-group
					.col-sm-offset-3.col-sm-9
					button.btn.btn-default(for="submit") 提交
	script(src='/build/admin.min.js')
	script(src='/js/admin.js')